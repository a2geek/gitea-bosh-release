processes:
- name: act_runner
  executable: /var/vcap/jobs/act_runner/bin/start

  persistent_disk: true
  
  #
  # Note: we need to be allowed to execute downloaded content. "persistent_disk" does not allow this.
  #   ... but we cannot mount "/var/vcap/store/act_runner" since that is the persistent disk name.
  #
  #       ¯\_(ツ)_/¯
  #
  additional_volumes:
  - path: /var/vcap/store/act_workdir
    writable: true
    allow_executions: true
