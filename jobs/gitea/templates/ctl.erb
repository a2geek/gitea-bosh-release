#!/bin/bash

RUN_DIR=/var/vcap/sys/run/gitea
LOG_DIR=/var/vcap/sys/log/gitea
PIDFILE=${RUN_DIR}/gitea.pid
BIN_DIR=/var/vcap/packages/gitea/bin
DATA_DIR=/var/vcap/store/gitea
JOB_DIR=/var/vcap/jobs/gitea

case $1 in

  start)
    mkdir -p $RUN_DIR $LOG_DIR $DATA_DIR
    chown -R vcap:vcap $RUN_DIR $LOG_DIR

    echo $$ > $PIDFILE

#    export ROOT_URL="https://gitea.gdc.lan"
#    export HTTP_PORT="443"
#    export SSH_DOMAIN="gitea.gdc.lan"
#    export SSH_PORT="2222"    # published port is 2222
#    export ALLOW_LOCALNETWORKS="true"
#    export DISABLE_REGISTRATION="true"
#    export DEFAULT_BRANCH="main"

    export PATH=/var/vcap/packages/git/bin:$PATH
    export GITEA_WORK_DIR=${DATA_DIR}
    export HOME=${DATA_DIR}

    exec chpst -u vcap:vcap ${BIN_DIR}/gitea web \
      --config ${JOB_DIR}/config/app.ini \
      >> ${LOG_DIR}/gitea-stdout.log \
      2>> ${LOG_DIR}/gitea-stderr.log

    ;;

  stop)
    kill -9 $(cat $PIDFILE)
    rm -f $PIDFILE

    ;;

  *)
    echo "Usage: ctl {start|stop}" ;;

esac
